{% import 'OroEmailBundle::macros.html.twig' as EA %}

{# Fetch mode is EAGER so no additional request peformed here #}
{% set email = record.getValue('email') %}
{% set fromEmailAddress = email.fromEmailAddress %}

{% if fromEmailAddress.owner is null -%}
    {{ value }}
{%- else -%}
    {{ EA.email_address_link(fromEmailAddress, value) }}
{% endif %}
